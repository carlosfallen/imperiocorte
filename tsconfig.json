{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "strict": true,

    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "types": ["@cloudflare/workers-types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "moduleResolution": "Bundler",
    "skipLibCheck": true
  }
}
